{
    "manifest_version": 3,
    "name": "LexiFlow",
    "version": "1.0",
    "description": "Dyslexia-Friendly AI Reading Coach: Empowering Inclusive Web Browsing",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "128": "icon.png"
    }
  }
  